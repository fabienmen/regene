<% session["referer"] = request.referer.match?(/replanted_area/) if request.referer %>
<% if session["referer"] %>

  <%= render "shared/navbar_black" %>

  <div class="progress navbar-margin-top" style="height: 6px;">
    <div class="progress-bar bg-progress" role="progressbar" style="width: 100%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    <div class="progress-bar bg-not-progress" role="progressbar" style="width: 0%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
  </div>

  <div class="container justify-content-center w-100">
    <h4 class="text-center py-3 bold-20 header-green">SÃ³ precisamos de mais algumas informaÃ§Ãµes ðŸŽ‰</h4>
  </div>

  <% else %>
    <div class="container justify-content-center w-100">
      <h4 class="text-center py-3 bold-20 header-green">Bora criar a sua conta</h4>
    </div>

<% end %>

<div class="signup">
  <div class="container justify-content-center w-100 mt-3" style="width: 450px;">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "first_name", placeholder: "Nome" }%>
          <%= f.input :last_name,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "last_name", placeholder: "Sobrenome" }%>
          <%= f.input :phone_number,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "phone_number", placeholder: "Celular" }%>
          <%= f.input :tax_number,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "tax_number", placeholder: "CPF" }%>
          <%= f.input :password,
                      required: true,
                      label: false,
                      # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", placeholder: "Senha (min 6 caracteres)" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      label: false,
                      input_html: { autocomplete: "new-password", placeholder: "Confirmar senha" } %>
        </div>

        <div class="form-actions w-100 d-flex justify-content-center">
          <%= f.button :submit, session["referer"] ? "ComeÃ§ar a ganhar" : "Criar conta", class: "btn btn-success w-100 py-4" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>

  </div>
</div>
