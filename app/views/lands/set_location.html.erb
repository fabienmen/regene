<div class="position-relative">
  <%= render "shared/navbar_black" %>
  <div class="position-absolute w-100 top-100">

    <div class="mt-5" data-controller="mapconteiner">
      <div class="progress" style="height: 6px;">
        <div class="progress-bar bg-progress" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        <div class="progress-bar bg-not-progress" role="progressbar" style="width: 75%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
      </div>

      <h3 class="text-center my-3" style="color: #29CF7A;"><strong>Onde estÃ¡ seu terreno ?</strong></h3>
      <div class="w-100 d-flex justify-content-center">
        <div class="shadow-boxing" style="width: 90%; height: 55vh; border-radius: 7px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          <p data-map-target="address"></p>
        </div>
      </div>

      <div class="w-100 d-flex justify-content-center mt-3">
        <%= link_to 'Confirmar', set_total_area_path, class: "btn btn-success py-4", data: { action: 'click->mapconteiner#storeValue' }, style: "width: 90%;" %>
      </div>
    </div>

  </div>
</div>
