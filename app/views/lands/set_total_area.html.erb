<div class="position-relative">
  <%= render "shared/navbar_black" %>
  <div class="position-absolute w-100 top-100">
    <div class="progress mt-5" style="height: 6px;">
      <div class="progress-bar bg-progress" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
      <div class="progress-bar bg-not-progress" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="img-banner d-flex flex-column justify-content-center">
      <div class="w90 mx-auto py-3">
        <h1 class="text-center py-3 bold-20">Qual é o tamanho da sua terra, em hectares?</h1>
      </div>
      <div class="w90 mx-auto py-3">
        <div>
          <%= simple_form_for @land, url: set_replanted_area_path, method: :get do |f| %>
            <%= f.input :total_area, required: true, placeholder: "Ex: 100 hectares", label: false %>
            <p class="banner-header mb-5">Em <strong><%= session[:location] %></strong>, onde a floresta nativa é <strong>Amazônica</strong></p>
            <%= f.submit 'Validar', class: "btn btn-success w-100 py-4" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
