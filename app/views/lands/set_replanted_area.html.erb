<div class="position-relative">
  <%= render "shared/navbar_black" %>

  <div class="position-absolute w-100 top-100">

    <div class="progress mt-5" style="height: 6px;">
      <div class="progress-bar bg-progress" role="progressbar" style="width: 75%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
      <div class="progress-bar bg-not-progress" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

  <div>
    <h4 class="text-center py-3 bold-20 header-green">Simule a sua renda</h4>
  </div>
  <div class="card w90 shadow-boxing mx-auto rounded-4 p-3">
    <div data-controller="replanted-size">

      <div class="d-none" data-replanted-size-target="total"><%= @total %></div>
        <p class="money-header text-center"> <strong>R$<span id="money" data-replanted-size-target="money"></span></strong><span class="mes">/MÃªs</span></p>
          <%= simple_form_for @offer, url: new_user_registration_path, method: :get do |f| %>
            <%= f.input :replanted_area, as: :range, input_html:{ min:"0", max: @size, "data-target": "replanted-size.range", "data-action": 'input->replanted-size#displaySize' }%>
            <br>
            <div class="d-flex justify-content-between">
              <div>
                <p><span id="demo" data-replanted-size-target="demo"></span>Ha</p>
              </div>
              <div>
                <p><span><%= @size %></span>Ha</p>
              </div>
            </div>
          <div class="w-100 d-flex justify-content-center mt-3">
              <%= f.submit 'Estou Dentro!', class: "btn btn-success  w90 py-4" %>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
