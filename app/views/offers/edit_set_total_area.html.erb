<div class="position-relative">
  <%= render "shared/navbar_black" %>
  <div class="position-absolute w-100 top-100">
    <div class="progress mt-5" style="height: 6px;">
      <div class="progress-bar bg-progress" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
      <div class="progress-bar bg-not-progress" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="img-banner-set d-flex flex-column justify-content-between">
      <div class="w90 mx-auto py-3">
        <h1 class="text-center py-3 bold-20">Qual é o tamanho da sua terra?</h1>
      </div>
      <%= simple_form_for @land, url: edit_set_replanted_area_offer_path, method: :ge, html: { class: "d-flex flex-column flex-grow-1 justify-content-between" } do |f| %>
        <div class="w90 mx-auto py-3">
          <div>
            <%= f.input :total_area, placeholder: "ex: 500H", label: false %>
            <p class="banner-header mb-5">Em <strong><%= @land.address %></strong>, onde a floresta nativa é <strong>Amazônica</strong></p>
          </div>
        </div>
        <div class="w90 mx-auto py-3 mb-3">
          <%= f.submit 'Validar', class: "btn btn-success w-100 py-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
